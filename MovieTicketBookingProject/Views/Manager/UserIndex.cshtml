@model IEnumerable<MovieTicketBookingProject.Models.Movie>

@{
    ViewData["Title"] = "UserIndex";
}

<h1>Welcome</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                Genre
            </th>
            <th>
                Seats Left
            </th>
            <th>
                Show time
            </th>
            <th>
               Price Kr
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Showtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                <img src="@item.Movie_ImageUrl" width="100" height="100" asp-append-version="true" />
            </td>
            <td>
                <a asp-action="BookNow" class="btn btn-primary" asp-route-id="@item.ID">Book Your Ticket</a>
        </tr>
        }
    </tbody>
</table>
