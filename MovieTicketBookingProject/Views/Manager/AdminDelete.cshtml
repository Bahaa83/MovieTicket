@model MovieTicketBookingProject.Models.Movie

@{
    ViewData["Title"] = "AdminDelete";
}

<h1>Admin</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie_Name)
        </dd>
        <dt class="col-sm-2">
            Genre :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie_Type)
        </dd>
        <dt class="col-sm-2">
            Seats Left :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatsLeft)
        </dd>
        <dt class="col-sm-2">
            Show time :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime)
        </dd>
        <dt class="col-sm-2">
            Price :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Image :
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Movie_ImageUrl" width="100" height="100" asp-append-version="true" />
        </dd>
    </dl>
</div>

<form asp-action="ConfirmDelete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<h1></h1>
<div>
   
    <a asp-action="AdminIndex" class="btn btn-primary">Back to List</a>
    <hr />
</div>

