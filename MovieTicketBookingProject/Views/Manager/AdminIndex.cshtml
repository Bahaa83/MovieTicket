@model IEnumerable<MovieTicketBookingProject.Models.Movie>

@{
    ViewData["Title"] = "AdminIndex";
}


<h1 style="color:blue">Admin</h1>



<p>
    <a asp-action="AdminCreate" style="color:limegreen" class=" btn btn-primary"><h4>Add Movie</h4></a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>

                Movie Name
            </th>
            <th>
                Genre
            </th>
            <th>
                Seats Left
            </th>
            <th>
                Show time
            </th>
            <th>
                Price kr
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Showtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Movie_ImageUrl" width="100" height="100" asp-append-version="true" />
            </td>
            <td>
                @*<input type="submit" value="Save" class="btn btn-primary" />*@
                <a asp-action="AdminEdit" class="btn btn-primary" asp-route-id="@item.ID">Edit</a>
                <a asp-action="AdminDetails" class="btn btn-outline-primary" asp-route-id="@item.ID">Details</a>
                <a asp-action="AdminDelete" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
