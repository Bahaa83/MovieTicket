@model MovieTicketBookingProject.Models.Movie

@{
    ViewData["Title"] = "AdminDetails";
}


<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie_Name)
        </dd>
        <dt class="col-sm-2">
            Genre :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie_Type)
        </dd>
        <dt class="col-sm-2">
            Seats Left :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatsLeft)
        </dd>
        <dt class="col-sm-2">
            Show time :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime)
        </dd>
        <dt class="col-sm-2">
            Price :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Image :
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Movie_ImageUrl" width="100" height="100" asp-append-version="true" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AdminEdit" class="btn btn-primary" asp-route-id="@Model.ID">Edit</a>
    <a asp-action="AdminIndex" class="btn btn-primary">Back to List</a>
</div>
